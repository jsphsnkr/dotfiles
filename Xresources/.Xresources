#include "/home/spinks/colours/snowblind"

Xft.dpi: 96
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

!*.font:             -*-fixed-*-*-*-*-*-*-*-*-*-*-*-*
*.font:				xft:hack:size=9
*.boldFont:
urxvt.letterSpace: -2

urxvt.scrollBar:	false

URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

urxvt.internalBorder: 8

URxvt*iconFile: /usr/share/icons/Numix-Circle/48/apps/gnome-terminal.svg

! special
*.foreground:   fg
*.background:   bg
*.cursorColor:  lo

! black
*.color0:       bg
*.color8:       fg

! red
*.color1:       hi
*.color9:       hi

! green
*.color2:       lo
*.color10:      lo

! yellow
*.color3:       lo
*.color11:      lo

! blue
*.color4:       md
*.color12:      md

! magenta
*.color5:       hi
*.color13:      hi

! cyan
*.color6:       md
*.color14:      md

! white
*.color7:       fg
*.color15:      fg

