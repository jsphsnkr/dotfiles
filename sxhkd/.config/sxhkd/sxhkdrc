#
# wm independent hotkeys
#

# terminal emulator
super + Return
	urxvt

# program launcher
super + space
	dmenu_run -fn "xft:Dejavu Sans Mono:size=9:antialias=true:hinting=true" -nb "#cccccc" -nf "#68615e" -sb "#cccccc" -sf "#1b1918"

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# take a screenshot
super + Print
    scrot

# now playing (cmus)
super + n
    npcmus

super + 0
    cmus-remote -n

super + 8
    cmus-remote -r

super + 9
    cmus-remote -u

super + equal
    amixer set Master 3dB+ unmute

super + minus
    amixer set Master 3dB- unmute

XF86MonBrightnessUp
    xbacklight +20

XF86MonBrightnessDown
    xbacklight -20

super + BackSpace
    poppy $(date '+%a %H%M')

super + p
    scrot -u -b

#
# wmutils
#

# kill active window
super + q
    killw $(pfw)

# move windows around
alt + {h,j,k,l}
    wmv {-20 0, 0 20, 0 -20, 20 0} $(pfw)

# snap to corners
alt + {y,u,b,n,g}
    corner.sh {tl,tr,bl,br,md} $(pfw)

# resize windows
alt + shift + {h,j,k,l}
    wrs {-20 0, 0 20, 0 -20, 20 0} $(pfw)

# cycle windows
super + Tab
    focus.sh next

# focus closest window in specified direction
super + {h,j,k,l}
    closest.sh {h,j,k,l}

# add window to group
super + shift + {1,2,3,4,5}
    groups.sh -s $(pfw) {1,2,3,4,5}

# toggle group visibility
super + {1,2,3,4,5}
    groups.sh -t {1,2,3,4,5}

# remove window from all groups
super + slash
    groups.sh -c $(pfw) all

# toggle fullscreen of active window
super + f
    fullscreen.sh $(pfw)

# tile ala dwm
super + t
    tile.sh
