#
# terminal emulator
super + Return
	urxvt

# program launcher
super + space
	dmenu_run -b -nb '#2b2b2b' -nf '#e6e1dc' -sb '#e6e1dc' -sf '#2b2b2b' -fn "Terminus:pixelsize=12"

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# take screenshot
super + Print
	scrot

# launch file explorer
super + BackSpace
	pcmanfm

XF86AudioLowerVolume
    amixer set Master 3dB- unmute

XF86AudioRaiseVolume
    amixer set Master 3dB+ unmute

XF86AudioMute
    amixer set Master toggle

#XF86AudioPlay
super + 9
    mpc toggle

#XF86AudioNext
super + 0
    mpc next

#XF86AudioPrev
super + 8
    mpc prev

XF86MonBrightnessUp
    xbacklight +20

XF86MonBrightnessDown
    xbacklight -20

#
# wmutils binds
#

# close window
super + w
    killw $(pfw)

# move windows around
super + {Left,Down,Up,Right}
    wmv {-20 0, - 20, 0 -20, 20 0} $(pfw)

# resize windows
super + shift + {Left,Down,Up,Right}
    wrs {-20 0, - 20, 0 -20, 20 0} $(pfw)

# snap windows to corners
super + {y,u,b,n}
    snap {tl,tr,bl,br}

# focus closest window in cardinal direction
super + {h,j,k,l}
    clst {east,south,north,west}

# cycle windows
super + shift + Tab
    fcs prev        
super + Tab
    fcs next

# toggle groups' visibility
super + {1,2,3,4,5}
    grps -M {1,2,3,4,5}

# add window to a group
super + shift + {1,2,3,4,5}
    grps -s $(pfw) {1,2,3,4,5}

# remove window from all groups
super + r
    grps -c $(pfw)
