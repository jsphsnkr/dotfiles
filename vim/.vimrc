set nocompatible
syntax on
set cc=79
set t_Co=16
colorscheme desert
set laststatus=2
set number
set cursorline
set wildmenu
set showmatch
filetype plugin indent on

" show existing tab with 4 spaces width
set tabstop=4
set softtabstop=4
" when indenting with '>', use 4 spaces width
set shiftwidth=4
" On pressing tab, insert 4 spaces
set expandtab
